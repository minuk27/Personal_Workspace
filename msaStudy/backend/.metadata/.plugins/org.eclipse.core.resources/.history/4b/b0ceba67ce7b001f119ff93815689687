server:
  port: 1001
  
spring:
  application:
    name: gatewayServer
  cloud:
    gateway:
      routes:
        - id: userService-account-router
          uri: lb://USER-SERVICE
          predicates:
            - Path=/userService/Signin
            - Path=/userService/Signup
        - id: userService-other-router
          uri: lb://USER-SERVICE
          predicates:
            - Path=/userService/**
            - Path=!/userService/Signin
            - Path=!/userService/Signup
          filters:
            - JwtAuthenticationFilter
            
      #default-filters:
        #- AddResponseHeader=Access-Control-Allow-Origin, *
        
      globalcors:
        corsConfigurations:
          '[/**]':
            allowedOrigins: "http://localhost:3001"
            allowedMethods:
              - GET
              - POST
              - PUT
              - DELETE
            allowedHeaders: "*"
            allowCredentials: true
    
eureka:
  instance:
    instance-id: ${spring.application.name}:${spring.application.instance_id:${random.value}}
  client:
    service-url:
      defaultZone: http://localhost:1000/eureka/
      
jwt:
  secret: my-msa-project-jwt
  accessTime: 1000 * 60
  refreshTime: 1000 * 60 * 60