package egovframework.msa.minuk.controller;

import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;
import org.springframework.web.client.RestTemplate;

import egovframework.msa.minuk.service.ServiceAService;
import lombok.RequiredArgsConstructor;

@RequiredArgsConstructor
@RestController
@RequestMapping("/serviceA")
public class ServiceAController {
	private final RestTemplate restTemplate;
	private String serviceBUrl = "http://localhost:8082/serviceB";
	
	private final ServiceAService serviceAService;

	@GetMapping
	public String getServiceA(@RequestParam(required = false) String message) {
		return serviceAService.getServiceAMessage(message);
	}
	
    @GetMapping("/serviceB")
    public ResponseEntity<String> callServiceB(@RequestParam(required = false) String message) {
        String response = restTemplate.getForObject(serviceBUrl + (message != null ? "?message=" + message : ""), String.class);
        return ResponseEntity.ok(response);
    }
    
    @GetMapping("/serviceA/{message}")
    public ResponseEntity<String> callServiceAWithMessage(@PathVariable String message) {
    	String requestUri = requst.getRequestURI();
    	
    	if(requestUri.startsWith("/serviceB/serviceB")) {
    		return "This is the wrong path";
    	}
    	
        return serviceBService.getServiceBMessage(message);
    }
}
